<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chen.questiong.fragment.Micrsoft">

    <Button
        android:id="@+id/m_chapter1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/m_chapter2"
        android:layout_toRightOf="@+id/m_chapter3"
        android:layout_toEndOf="@+id/m_chapter3"
        android:layout_marginBottom="105dp" />
    <Button
        android:id="@+id/m_chapter2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignBottom="@+id/m_chapter3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp" />
    <Button
        android:id="@+id/m_chapter3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
